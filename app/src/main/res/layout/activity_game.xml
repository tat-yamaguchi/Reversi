<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
        <TextView
                android:id="@+id/tv_thinking_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="@string/text_info_thinking"
                android:visibility="invisible"/>
    </FrameLayout>

    <GridLayout
            android:id="@+id/game_board_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:columnCount="8"
            android:rowCount="8" />

    <TextView
            android:id="@+id/game_current_player_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />
    <TextView
            android:id="@+id/game_black_player_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    <TextView
            android:id="@+id/game_white_player_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

    <Button
            android:id="@+id/btn_game_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_game_finish"/>
</LinearLayout>